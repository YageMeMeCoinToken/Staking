        // Toggle FAQ
        function toggleFAQ(element) {
            element.classList.toggle('active');
            const icon = element.querySelector('.faq-question span');
            icon.textContent = element.classList.contains('active') ? '−' : '+';
        }

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Connect Wallet (basic)
        document.getElementById('connectWalletNav').addEventListener('click', async (e) => {
            e.preventDefault();
            if (typeof window.ethereum !== 'undefined') {
                try {
                    const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
                    const shortAddress = accounts[0].substring(0, 6) + '...' + accounts[0].substring(38);
                    e.target.textContent = shortAddress;
                } catch (error) {
                    console.error('Error connecting wallet:', error);
                }
            } else {
                alert('Please install MetaMask to connect your wallet.');
            }
        });

